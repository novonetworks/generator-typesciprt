{
    "name": "fixture",
    "version": "1.0.0",
    "description": "Typescript Project",
    "main": "src/index.ts",
    "repository": "https://github.com/novonetworks/generator-typescript",
    "license": "MIT",
    "scripts": {
        "start": "ts-node src/index.ts",
        "build": "tsc",
        "lint": "tslint src/**/*.ts",
        "test": "cross-env CI=true jest --coverage --colors --reporters",
        "test:watch": "jest --watchAll",
        "format": "prettier --write \"src/**/*\"",
        "pre-commit": "npm-run-all test lint-staged",
        "lint-staged": "lint-staged"
    },
    "jest": {
        "globals": {
            "ts-jest": {
                "tsConfigFile": "<rootDir>/tsconfig.json"
            }
        },
        "collectCoverageFrom": ["src/**/*.{js,jsx,ts,tsx}"],
        "moduleDirectories": ["<rootDir>/src", "node_modules"],
        "moduleFileExtensions": ["js", "json", "jsx", "ts", "tsx"],
        "testEnvironment": "node",
        "testMatch": [
            "**/?(*.)(spec|test).(j|t)s?(x)",
            "**/__tests__/**/*.(j|t)s?(x)"
        ],
        "transform": {
            "^.+\\.(ts|tsx)?$": "ts-jest"
        },
        "transformIgnorePatterns": [
            "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run pre-commit"
        }
    },
    "lint-staged": {
        "*.{ts,tsx,js,jsx}": ["prettier --write", "tslint --fix", "git add"],
        "*.{json,css,md}": ["prettier --write", "git add"]
    },
    "prettier": {
        "parser": "typescript",
        "semi": false,
        "overrides": [
            {
                "files": "*.json",
                "options": {
                    "parser": "json"
                }
            }
        ]
    },
    "devDependencies": {
        "@types/jest": "^23.3.2",
        "cross-env": "^5.2.0",
        "husky": "^1.0.0-rc.14",
        "jest": "^23.6.0",
        "lint-staged": "^7.2.2",
        "npm-run-all": "^4.1.3",
        "prettier": "^1.14.2",
        "ts-jest": "^23.1.4",
        "ts-node": "^7.0.1",
        "tslint": "^5.11.0",
        "tslint-config-prettier": "^1.15.0",
        "typescript": "^3.0.3"
    }
}
