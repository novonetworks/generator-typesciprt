{
    "name": "@novonetworks/generator-typescript",
    "version": "2.1.0",
    "description": "Typescript Scaffolding Generator",
    "homepage": "https://github.com/novonetworks/generator-typescript",
    "author": {
        "name": "Ryan Yang",
        "email": "orange@novonetworks.com"
    },
    "files": ["generators"],
    "main": "generators/index.js",
    "keywords": ["yeoman-generator", "typescript"],
    "devDependencies": {
        "@types/fs-extra": "^8.0.0",
        "@types/jest": "^24.0.15",
        "@types/node": "^12.0.8",
        "@types/yeoman-generator": "^3.1.3",
        "@typescript-eslint/eslint-plugin": "^2.1.0",
        "@typescript-eslint/parser": "^2.1.0",
        "coveralls": "^3.0.4",
        "eslint": "^6.3.0",
        "eslint-config-prettier": "^6.2.0",
        "eslint-config-xo": "^0.26.0",
        "eslint-plugin-prettier": "^3.1.0",
        "fs-extra": "^8.1.0",
        "husky": "^3.0.5",
        "jest": "^24.8.0",
        "lint-staged": "^9.2.5",
        "prettier": "^1.18.2",
        "typescript": "^3.6.2",
        "yeoman-assert": "^3.1.0",
        "yeoman-test": "^2.0.0"
    },
    "engines": {
        "npm": ">= 8"
    },
    "dependencies": {
        "chalk": "^2.4.2",
        "dargs": "^7.0.0",
        "yeoman-generator": "^4.0.2",
        "yosay": "^2.0.2"
    },
    "jest": {
        "testEnvironment": "node",
        "modulePathIgnorePatterns": ["<rootDir>/generators/app/templates"]
    },
    "lint-staged": {
        "generators/**/*.js": ["eslint --fix", "git add"],
        "*.json": ["prettier --write", "git add"]
    },
    "eslintConfig": {
        "extends": ["xo", "prettier"],
        "env": {
            "jest": true,
            "node": true
        },
        "rules": {
            "capitalized-comments": "off",
            "prettier/prettier": [
                "error",
                {
                    "trailingComma": "all",
                    "semi": false,
                    "singleQuote": true
                }
            ]
        },
        "plugins": ["prettier"]
    },
    "eslintIgnore": ["fixtures"],
    "prettier": {
        "parser": "typescript",
        "trailingComma": "all",
        "semi": false,
        "singleQuote": true,
        "overrides": [
            {
                "files": ["*.json"],
                "options": {
                    "parser": "json"
                }
            }
        ]
    },
    "scripts": {
        "lint": "eslint generators --fix",
        "test": "jest __tests__ --watch",
        "test:ci": "jest __tests__ --coverage"
    },
    "repository": "novonetworks/generator-typescript",
    "license": "MIT",
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
