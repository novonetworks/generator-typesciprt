{
    "name": "@novonetworks/generator-typescript",
    "version": "1.4.1",
    "description": "Typescript Scaffolding Generator",
    "homepage": "https://github.com/novonetworks/generator-typescript",
    "author": {
        "name": "Ryan Yang",
        "email": "orange@novonetworks.com"
    },
    "files": ["generators"],
    "main": "generators/index.js",
    "keywords": ["yeoman-generator", "typescript"],
    "devDependencies": {
        "@types/chalk": "^2.2.0",
        "@types/jest": "^24.0.15",
        "@types/node": "^12.0.8",
        "@types/yeoman-generator": "^3.1.3",
        "coveralls": "^3.0.4",
        "eslint": "^5.16.0",
        "eslint-config-prettier": "^5.0.0",
        "eslint-config-xo": "^0.26.0",
        "eslint-plugin-prettier": "^3.1.0",
        "husky": "^2.4.1",
        "jest": "^24.8.0",
        "lint-staged": "^8.2.1",
        "prettier": "^1.18.2",
        "yeoman-assert": "^3.1.0",
        "yeoman-test": "^2.0.0"
    },
    "engines": {
        "npm": ">= 8"
    },
    "dependencies": {
        "chalk": "^2.4.2",
        "dargs": "^6.0.0",
        "yeoman-generator": "^4.0.1",
        "yosay": "^2.0.2"
    },
    "jest": {
        "testEnvironment": "node",
        "modulePathIgnorePatterns": ["<rootDir>/generators/app/templates"]
    },
    "lint-staged": {
        "*.js": ["eslint --fix", "git add"],
        "*.json": ["prettier --write", "git add"]
    },
    "eslintConfig": {
        "extends": ["xo", "prettier"],
        "env": {
            "jest": true,
            "node": true
        },
        "rules": {
            "capitalized-comments": "off",
            "prettier/prettier": [
                "error",
                {
                    "singleQuote": true,
                    "tabWidth": 4,
                    "useTabs": false,
                    "semi": false
                }
            ]
        },
        "plugins": ["prettier"]
    },
    "prettier": {
        "parser": "typescript",
        "singleQuote": true,
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "overrides": [
            {
                "files": "*.json",
                "options": {
                    "parser": "json"
                }
            }
        ]
    },
    "scripts": {
        "pretest": "eslint .",
        "precommit": "lint-staged",
        "test": "jest --watch",
        "test:ci": "jest --coverage"
    },
    "repository": "novonetworks/generator-typescript",
    "license": "MIT"
}
